<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="377dp"
        android:layout_height="123dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/SerialNo"
            android:layout_width="31dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageView6"
            android:layout_width="89dp"
            android:layout_height="82dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="24dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
                    android:id="@+id/name"
                    android:layout_width="154dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Name: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/num_help"
                    android:layout_width="153dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:text="# of help requests: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/name" />

                <TextView
                    android:id="@+id/num_donations"
                    android:layout_width="153dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:text="# of donation requests: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/num_help" />

                <TextView
                    android:id="@+id/num_help_fulfilled"
                    android:layout_width="153dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:text="# of help requests fulfilled: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/num_donations" />

                <TextView
                    android:id="@+id/num_donation_fulfilled"
                    android:layout_width="153dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:text="# of donation requests fulfilled: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/num_help_fulfilled"
                    app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>