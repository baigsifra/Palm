<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgencyLeaderBoard">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mostInteractedAgencyView1"
        android:layout_width="383dp"
        android:layout_height="313dp"
        android:layout_marginTop="8dp"
        android:translationZ="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.0"></androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bar_back"
        app:layout_constraintTop_toBottomOf="@+id/agencyView" />

    <ImageView
        android:id="@+id/imageView_viewRequests3"
        android:layout_width="409dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgrnd_small" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rosario_semibold"
        android:text="Leaderboard"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_viewRequests3"
        app:layout_constraintTop_toTopOf="@+id/imageView_viewRequests3" />

    <ImageView
        android:id="@+id/menubar_ind_leaderboard"
        android:layout_width="409dp"
        android:layout_height="64dp"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_viewRequests3" />

    <Button
        android:id="@+id/helpRequestsButton2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Agency Stats"
        android:textAllCaps="false"
        android:textColor="#666666"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView_viewRequests3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/trophy"
        android:translationZ="11dp"
        app:layout_constraintStart_toStartOf="@+id/menubar_ind_leaderboard"
        app:layout_constraintTop_toBottomOf="@+id/imageView_viewRequests3"
        tools:srcCompat="@drawable/trophy" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="177dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:shadowColor="#333333"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Help Request Fulfilled"
        android:textColor="#669933"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menubar_ind_leaderboard" />

    <TextView
        android:id="@+id/agencyView"
        android:layout_width="384dp"
        android:layout_height="131dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:shadowColor="#333333"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Your Most Interacted With Agencies"
        android:textColor="#669933"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="192dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:shadowColor="#333333"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Donation Requests Fulfilled"
        android:textColor="#669933"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/menubar_ind_leaderboard" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="40dp"
        android:text="1"
        android:translationZ="11dp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="40dp"
        android:text="1"
        android:translationZ="11dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mostInteractedAgencyView1"
        android:layout_width="164dp"
        android:layout_height="89dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:translationZ="11dp"
        app:layout_constraintStart_toStartOf="@+id/agencyView"
        app:layout_constraintTop_toTopOf="@+id/agencyView">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mostInteractedAgencyView2"
        android:layout_width="165dp"
        android:layout_height="86dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="36dp"
        android:translationZ="11dp"
        app:layout_constraintStart_toStartOf="@+id/agencyView"
        app:layout_constraintTop_toTopOf="@+id/agencyView">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/initiateHelpRequestCVBtn2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:text="Individual Employee Stats"
        android:textColor="#666666"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <Button
        android:id="@+id/initiateHelpRequestCVBtn3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:text="Agency Info"
        android:textColor="#666666"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/initiateHelpRequestCVBtn2"
        app:layout_constraintTop_toBottomOf="@+id/agencyView" />

    <SearchView
        android:id="@+id/SearchAgencies"
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="142dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="68dp"
        android:text="Search for an Agency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="#9A9898" />

        <TableRow>

            <Button
                android:id="@+id/requestStatusMenuBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_hand_pointing"
                android:drawableTint="@color/black"
                app:cornerRadius="24dp" />

            <Button
                android:id="@+id/initiateRequestMenuBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_your_requests"
                android:drawableTint="@color/black"
                app:cornerRadius="24dp" />

            <Button
                android:id="@+id/leaderboardMenuBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/dark_teal"
                android:drawableTop="@drawable/leaderboard_icon"
                android:drawableTint="@color/black"
                app:cornerRadius="24dp" />

            <Button
                android:id="@+id/profileMenuBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/profile_icon"
                android:drawableTint="@color/black"
                app:cornerRadius="24dp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>